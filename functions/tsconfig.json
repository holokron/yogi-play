{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
