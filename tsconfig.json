{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "functions"
  ],
  "include": [
    "src"
  ]
}
